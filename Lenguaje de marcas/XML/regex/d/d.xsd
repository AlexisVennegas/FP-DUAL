<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema">
    <xs:simpleType name="patronD">
        <xs:restriction base="xs:string">
            <xs:pattern value="\+?[0-9]{9,22}"></xs:pattern>
        </xs:restriction>
    </xs:simpleType>

    <xs:element name="texto" type="patronD"></xs:element>
</xs:schema>

<!-- d) solo puede contener un + (opcional) y a continuación dígitos (mínimo 9 y máximo 12). -->
